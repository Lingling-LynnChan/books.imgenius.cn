# 环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# Django设置
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# 数据库设置
MONGODB_URI=mongodb://booksite_user:booksite_password@mongodb:27017/booksite

# Redis设置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# 邮件设置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@booksite.com

# AI API设置
AI_CHECK_API_URL=http://localhost:8000/api/check
AI_CHECK_API_KEY=your-ai-api-key

# 数据库连接 (如果使用MySQL而不是MongoDB作为主数据库)
# DATABASE_URL=mysql://user:password@db:3306/booksite

# 安全设置
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
